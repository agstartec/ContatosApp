@model LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}
<div class="container w-50 p-3">
	    @using (Html.BeginForm("Entrar", "Login", FormMethod.Post))
    {
      <div class="mb-3">
        <label for="login" class="form-label">Email address</label>
        <input type="text" asp-for="usuario" class="form-control" id="login">
            <span asp-validation-for="usuario"></span>
      </div>
      <div class="mb-3">
        <label for="senha" class="form-label">Password</label>
        <input type="password" asp-for="senha" class="form-control" id="senha">
            <span asp-validation-for="senha"></span>
      </div>
      <button type="submit" class="btn btn-primary">Entrar</button>
    }
</div>
