@model List<ContatoModel>
@{
	ViewData["Title"] = "Lista de Contatos";
}
<div class="text-center">
	<div class="d-grid gap-2 d-md-flex justify-md-start">
		<a  role="button" class="btn btn-primary" asp-controller="Contatos" asp-action="CriarContato"> Adicionar contato</a>
	</div>

	<h1 class="display-3">Lista de contatos</h1>

	<table class="table">
	  <thead>
		<tr>
		  <th scope="col">ID</th>
		  <th scope="col">Nome</th>
		  <th scope="col">Contato</th>
		  <th scope="col">Email</th>
		  <th scope="col">Opções</th>
		</tr>
	  </thead>
	  <tbody>
			@if (Model != null && Model.Any())
			{
				foreach (ContatoModel contato in Model)
				{
				<tr>
				  <th scope="row">@contato.id</th>
				  <td>@contato.nome</td>
				  <td>@contato.telefone</td>
				  <td>@contato.email</td>
				  <td>
					<div class="btn-group" role="group">
						<a role="button" class="btn btn-primary" asp-route-id="@contato.id" asp-controller="Contatos" asp-action="EditarContato">Editar</a>
						<a role="button" class="btn btn-danger" asp-route-id="@contato.id" asp-controller="Contatos" asp-action="ApagarContatoConfirmar">Apagar</a>
					</div>
				</td>
				</tr>
				}	
			}
		</tbody>
	</table>
</div>


