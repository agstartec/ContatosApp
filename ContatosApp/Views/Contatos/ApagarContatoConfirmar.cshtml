@model ContatoModel
@{
	ViewData["Title"] = "Confirmar Ação";
}

<div class="text-center">
	<h2>Deseja confirmar esta ação?</h2>
	<p>O contato será excluido permanentemente</p>
	<a role="button" class="btn btn-primary ms-3" asp-route-id="@Model.id" asp-controller="Contatos" asp-action="ApagarContato">Confirmar</a>
	<a role="button" class="btn btn-secondary ms-3" asp-controller="Contatos" asp-action="Index">Voltar</a>
</div>
